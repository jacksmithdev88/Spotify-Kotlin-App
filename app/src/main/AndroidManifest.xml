<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.assessmentapplication">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <queries>
        <package android:name="com.spotify.music" />
    </queries>
    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_icon_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ActivityPlaylistExtended"></activity>
        <activity android:name=".ActivityFavourites" />
        <activity android:name=".ActivitySearch"
            />
        <activity android:name=".ActivityYourAccount" />
        <activity
            android:name=".ActivitySplashScreen"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityMain" />
    </application>
</manifest>